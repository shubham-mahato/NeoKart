{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/auth-service",
    "rootDir": "../../",             
    "types": ["node", "express"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "../../",             
    "paths": {
      "@packages/*": ["packages/*"]  
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "../../packages/**/*.ts"
  ],
  "exclude": [
    "dist",
    "out-tsc",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "references": [
    {
      "path": "../../packages/tsconfig.lib.json"
    }
  ]
}
